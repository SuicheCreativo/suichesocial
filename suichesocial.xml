<?xml version="1.0" encoding="utf-8"?>
<extension version="3.1" type="plugin" group="content" method="upgrade">
    <name>Social Share Buttons - SuicheSocial</name>
    <author>Suiche Creativo</author>
    <creationDate>Junio 2016</creationDate>
    <copyright>Copyright (C) 20016 Open Source Matters. All rights reserved.</copyright>
    <license>GNU General Public License version 2 or later; see LICENSE.txt</license>
    <authorEmail>juandavid8a@gmail.com</authorEmail>
    <authorUrl>www.suichecreativo.com</authorUrl>
    <version>1.0</version>
    <description>Plugin desarrollado por www.suichecreativo.com que permite compartir contenido en redes sociales.</description>
    <files>
        <filename plugin="suichesocial">suichesocial.php</filename>
        <filename>index.html</filename>
        <folder>img</folder>
    </files>
    <config>
        <fields name="params">
 
            <fieldset name="basic">

                <field name="contenido" type="radio"
                    default="1"
                    description="Publicar en contenido de Joomla"
                    label="Contenido"
                >
                    <option value="0">JOFF</option>
                    <option value="1">JON</option>
                    
                </field>
 
                <field name="k2" type="radio"
                    default="1"
                    description="Publicar en K2"
                    label="K2"
                >
                    <option value="0">JOFF</option>
                    <option value="1">JON</option>
                </field>

                <field name="virtuemart" type="radio"
                    default="0"
                    description="Publicar en Virtuemart"
                    label="Virtuemart"
                >
                    <option value="0">JOFF</option>
                    
                </field>


                <field name="facebook" type="radio"
                    default="1"
                    description="Compartir en Facebook"
                    label="Facebook"
                >
                    <option value="0">JOFF</option>
                    <option value="1">JON</option>
                </field>
 
                <field name="google" type="radio"
                    default="1"
                    description="Compartir Google+"
                    label="Goolge+"
                >
                    <option value="0">JOFF</option>
                    <option value="1">JON</option>
                </field>

                <field name="twitter" type="radio"
                    default="1"
                    description="Compartir en Twitter"
                    label="Twitter"
                >
                    <option value="0">JOFF</option>
                    <option value="1">JON</option>
                </field>
            </fieldset>
 
        </fields>
    </config>
</extension>